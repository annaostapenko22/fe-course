{{#with this}}

<li class="imgItem">
    <img src={{webformatURL}} data-source={{largeImageURL}} data-likes="{{likes}}" data-shows="{{views}}"
        data-comments="{{comments}}" data-downloads="{{downloads}}" alt="" class="buttonImage">
    <div class="stats">
        <p class="stats-item">
            <i class="material-icons">thumb_up</i>
            {{likes}}
        </p>
        <p class="stats-item">
            <i class="material-icons">visibility</i>
            {{views}}
        </p>
        <p class="stats-item">
            <i class="material-icons">comment</i>
            {{comments}}
        </p>
        <p class="stats-item">
            <i class="material-icons">cloud_download</i>
            {{downloads}}
        </p>
    </div>
</li>

{{/with}}